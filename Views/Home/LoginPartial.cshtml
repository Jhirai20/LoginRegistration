@model LoginUser
<div class="col-6">
    <div class="split">
        <h3>Login</h3>
        <form method="post" action='login'>
            <div class="form-group">
                <label asp-for="Email" for="exampleFormControlInput1">Email:</label>
                <input asp-for="Email" type="text" class="form-control" id="exampleFormControlInput1">
            </div>
            <div class="form-group">
                <label asp-for="password" for="exampleFormControlInput1">Password:</label>
                <input asp-for="password"  type="password" class="form-control" id="exampleFormControlInput1">
            </div>
            <input type='submit' class='btn btn-primary' value="Login">
        </form>
    </div>
</div>